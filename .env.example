# Configuration du bot DOFUS - Exemple
# =====================================
# Copiez ce fichier vers .env et modifiez avec vos vraies valeurs

# Paramètres de connexion DOFUS (OBLIGATOIRE)
DOFUS_USERNAME=votre_nom_utilisateur
DOFUS_PASSWORD=votre_mot_de_passe

# Sécurité et chiffrement
DATABASE_ENCRYPTION_KEY=changez_cette_cle_de_chiffrement_32_caracteres
SESSION_SECRET=votre_secret_session_aleatoire

# Configuration du bot
BOT_NAME=DofusBot
BOT_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# Base de données
DATABASE_PATH=data/databases/dofus_bot.db
AUTO_BACKUP=true
BACKUP_INTERVAL=3600
MAX_BACKUPS=24

# Notifications (optionnel)
WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Email (optionnel)
EMAIL_SMTP_SERVER=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Configuration réseau (optionnel)
PROXY_ENABLED=false
PROXY_TYPE=http
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Sécurité avancée
MAX_SESSION_DURATION=14400
BREAK_DURATION_MIN=1800
BREAK_DURATION_MAX=3600
DAILY_PLAY_LIMIT=43200

# Développement (ne pas utiliser en production)
DEV_MODE=false
SKIP_SAFETY_CHECKS=false
FAST_MODE=false
MOCK_GAME_CLIENT=false

# Paths personnalisés (optionnel)
DOFUS_WINDOW_TITLE=Dofus
TESSERACT_PATH=
SCREENSHOTS_PATH=screenshots/
LOGS_PATH=logs/

# Fonctionnalités (true/false)
ENABLE_COMBAT=true
ENABLE_FARMING=true
ENABLE_NAVIGATION=true
ENABLE_MARKET_ANALYSIS=false
ENABLE_GUILD_MANAGEMENT=false

# =====================================
# NOTES IMPORTANTES :
# =====================================
# 
# 1. Ne JAMAIS committer le fichier .env avec de vraies données
# 2. Utilisez des mots de passe forts pour DATABASE_ENCRYPTION_KEY
# 3. Les webhooks sont optionnels mais recommandés pour le monitoring
# 4. Respectez les ToS du jeu et utilisez le bot de manière responsable
# 5. Les sessions longues augmentent le risque de détection
# 
# =====================================